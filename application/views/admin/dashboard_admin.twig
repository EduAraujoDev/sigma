{% extends "base_layout.twig" %}
{% block title %}Dashboard{% endblock %}

{% block content_header %}
    <section class="content-header">
        <h1>
            Área Administrador
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Área Administrador</li>
        </ol>
    </section>
{% endblock %}

{% block content %}
    <section class="content">

        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-aqua">
                        <a href="{{base_url}}cliente/listar" style="color: #fff;">
                            <i class="fa fa-user"></i>
                        </a>
                    </span>

                    <div class="info-box-content">
                        <a href="{{base_url}}cliente/listar" style="color: #000;">
                            <span class="info-box-text">Clientes</span>
                            <span class="info-box-number">{{qntCliente}}</span>
                        </a>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green">
                        <a href="{{base_url}}servico/listar" style="color: #fff;">
                            <i class="fa fa-wrench"></i>
                        </a>
                    </span>

                    <div class="info-box-content">
                        <a href="{{base_url}}servico/listar" style="color: #000;">
                            <span class="info-box-text">Serviços</span>
                            <span class="info-box-number">{{qntServico}}</span>
                        </a>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-yellow">
                        <a href="{{base_url}}produto/listar" style="color: #fff;">
                            <i><img src="{{base_url}}public/dist/img/icons/produtos-sigma.png" alt="produtos"></i>
                        </a>
                    </span>

                    <div class="info-box-content">
                        <a href="{{base_url}}produto/listar" style="color: #000;">
                            <span class="info-box-text">Produtos</span>
                            <span class="info-box-number">{{qntProduto}}</span>
                        </a>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-vinho">
                        <a href="{{base_url}}orcamento/listar" style="color: #fff;">
                            <i class="fa fa-automobile"></i>
                        </a>
                    </span>

                    <div class="info-box-content">
                        <a href="{{base_url}}orcamento/listar" style="color: #000;">
                            <span class="info-box-text">Orçamentos</span>
                            <span class="info-box-number">{{qntOrcamento}}</span>
                        </a>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->

            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-red">
                        <a href="{{base_url}}OrdemServico/listar" style="color: #fff;">
                            <i class="fa fa-list-alt"></i>
                        </a>
                    </span>

                    <div class="info-box-content">
                        <a href="{{base_url}}OrdemServico/listar" style="color: #000;">
                            <span class="info-box-text">Ordens de <br/> Serviço</span>
                            <span class="info-box-number">{{qntServico}}</span>
                        </a>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->

            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-verde">
                        <a href="{{base_url}}DespesaGeral/listar" style="color: #fff;">
                            <img alt="produtos" src="/public/dist/img/icons/despesas-sigma.png">
                        </a>
                    </span>

                    <div class="info-box-content">
                        <a href="{{base_url}}DespesaGeral/listar" style="color: #000;">
                            <span class="info-box-text">Despesas</span>
                            <span class="info-box-number">{{qntDespesa}}</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-azul">
                        <a href="{{base_url}}fornecedor/listar" style="color: #fff;">
                            <i class="fa fa-truck"></i>
                        </a>
                    </span>

                    <div class="info-box-content">
                        <a href="{{base_url}}fornecedor/listar" style="color: #000;">
                            <span class="info-box-text" style="
                                  font-family: 'Source Sans Pro','Helvetica Neue','Helvetica','Arial','sans-serif';
                                  font-size: 10pt;">Fornecedores</span>
                            <span class="info-box-number">{{qntFornecedor}}</span>
                        </a>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>

            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-chumbo">
                        <a href="{{base_url}}caixa" style="color: #fff;">
                            <i class="fa fa-calculator"></i>
                        </a>
                    </span>

                    <div class="info-box-content">
                        <a href="{{base_url}}caixa" style="color:rgb(51, 51, 51);">
                            <span class="info-box-text" style="
                                  font-family: 'Source Sans Pro','Helvetica Neue','Helvetica','Arial','sans-serif';
                                  font-size: 10pt;">Caixa</span>
                            <span class="info-box-number"></span>
                        </a>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Status de Despesas</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <center>
                            <div class="row">
                                <div class="col-md-7">
                                    <canvas id="skills2"></canvas>
                                </div>
                                <div class="col-md-5">
                                    {% for label in des_label %}
                                        <div class="row">
                                            <div class="col-md-2">
                                                <div style="width:30px;height:30px;background: {{label.color}};border-radius:30px;"></div>
                                            </div>
                                            <div class="col-md-6" style="margin-top: 5px;">
                                                {{label.nome}}
                                            </div>
                                        </div>
                                        <br>
                                    {% endfor %}
                                </div>
                            </div>


                        </center>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Aprovação de Orçamentos</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <center>
                            <div class="row">
                                <div class="col-md-7">
                                    <canvas id="skills"></canvas>
                                </div>
                                <div class="col-md-5">
                                    {% for label in orc_label %}
                                        <div class="row">
                                            <div class="col-md-2">
                                                <div style="width:30px;height:30px;background: {{label.color}};border-radius:30px;"></div>
                                            </div>
                                            <div class="col-md-6" style="margin-top: 5px;">
                                                {{label.nome}}
                                            </div>
                                        </div>
                                        <br>
                                    {% endfor %}
                                </div>
                            </div>


                        </center>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Status de Orçamentos</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <center>
                            <canvas id="clients" style="width:80%;"></canvas>
                        </center>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>

            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Status de Ordem de Serviço</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <center>
                            <div class="row">
                                <canvas id="clients2" style="width:80%;"></canvas>
                            </div>
                        </center>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>

        </div>
        <!-- /.row -->
    {% endblock %}

    {% block js %}

        <!-- jQuery 2.2.0 -->
        <script src="{{base_url}}public/plugins/jQuery/jQuery-2.2.0.min.js"></script>
        <!-- Bootstrap 3.3.6 -->
        <script src="{{base_url}}public/bootstrap/js/bootstrap.min.js"></script>
        <!-- ChartJS 1.0.1 -->
        <script src="{{base_url}}public/plugins/chartjs/Chart.min.js"></script>
        <!-- FastClick -->
        <script src="{{base_url}}public/plugins/fastclick/fastclick.js"></script>
        <!-- AdminLTE App -->
        <script src="{{base_url}}public/dist/js/app.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="{{base_url}}public/dist/js/demo.js"></script>
        <!-- page script -->
        <script>
            $(function () {
            {% autoescape false %}
                    var pieData = {{des_chart|json_encode()}};
            {% endautoescape %}
            {% autoescape false %}
                            var doughnutData = {{orc_chart|json_encode()}};
            {% endautoescape %}

                            var sorData = {
            {% autoescape false %}
                            labels:{{orc_barlabel|json_encode()}},
            {% endautoescape %}
                                    datasets: [
                                    {
                                    label: '2010 customers #',
                                            fillColor: 'rgb(20, 97, 204)',
            {% autoescape false %}
                                            data:{{orc_barchart|json_encode()}}
            {% endautoescape %}
                                    }
                                    ]
                            };

                    var sosData = {
            {% autoescape false %}
                    labels:{{ors_barlabel|json_encode()}},
            {% endautoescape %}
                            datasets: [
                            {
                            label: '2010 customers #',
                                    fillColor: '#4F596D',
            {% autoescape false %}
                                    data:{{ors_barchart|json_encode()}}
            {% endautoescape %}
                            }
                            ]
                    };
                    var context = document.getElementById('clients').getContext('2d');
                    var clientsChart = new Chart(context).Bar(sorData);
                    var context = document.getElementById('clients2').getContext('2d');
                    var clientsChart = new Chart(context).Bar(sosData);
                    var context = document.getElementById('skills').getContext('2d');
                    var skillsChart = new Chart(context).Doughnut(doughnutData);
                    var context = document.getElementById('skills2').getContext('2d');
                    var skillsChart = new Chart(context).Pie(pieData);
                });
        </script>
    {% endblock %}