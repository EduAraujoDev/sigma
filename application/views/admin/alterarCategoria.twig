{% extends "base_layout.twig" %}
{% block title %}Alterar Categoria{% endblock %}

{% block content_header %}
    <section class="content-header">
        <h1>
            Área Administrador
            <small>Alterar Categoria</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Alterar Categoria</li>
        </ol>
    </section>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Dados do Categoria</h3>
                </div>
                <form role="form" action="{{base_url}}admin/alteraCategoriaSelecionada/{{ categoria.id_categoria }}" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="descricao">Descrição</label>
                            <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Digite a categoria" value="{{ categoria.titulo }}">
                        </div>                       
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Alterar</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}