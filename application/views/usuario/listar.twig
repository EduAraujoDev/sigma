{% extends "base_layout.twig" %}
{% block title %}Listar Usuário{% endblock %}

{% block content_header %}
    <section class="content-header">
        <h1>
            Área Administrador
            <small>Listar Usuário</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Listar Usuário</li>
        </ol>
    </section>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    {% if message_success is not empty %}
                        <div class="alert alert-success alert-dismissible fade in" role="alert" id="alerta">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            <strong>Atenção!</strong>
                            {{message_success}}
                        </div>
                    {% endif %}
                    <form role="form" action="{{base_url}}usuario/buscar" method="GET">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search"></i></span>

                            <input type="text" name="busca" class="form-control" 
                                   placeholder="Nome da Usuário" >

                            <span class="input-group-addon"><input type="submit"  value="buscar"></span>
                        </div>
                    </form>
                    <br>
                    <div class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">                                
                                <table class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Id</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Nome</th>                                            
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Login</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">E-mail</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Tipo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for usuario in usuarios %}                                            
                                            <tr>
                                                <td>{{ usuario.id_usuario }}</td>
                                                <td>{{ usuario.nome }}</td>
                                                <td>{{ usuario.login }}</td>
                                                <td>{{ usuario.email }}</td>
                                                <td>{{ usuario.id_tipo_perfil }}</td>
                                                <td>
                                                    <a class="btn btn-primary btn-xs" href="{{base_url}}usuario/visualizar/{{ usuario.id_usuario }}">Visualizar</a>
                                                    <a class="btn btn-primary btn-xs" href="{{base_url}}usuario/editar/{{ usuario.id_usuario }}">Alterar</a>
                                                    <a class="btn btn-danger btn-xs" href="{{base_url}}usuario/deletar/{{ usuario.id_categoria }}">Excluir</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <a class="btn btn-primary btn-lg" href="{{base_url}}usuario/novo">Incluir</a>            
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript">
        $("#alerta").fadeTo(2000, 500).slideUp(500, function(){
            $("#alerta").alert('close');
        });
    </script>
{% endblock %}