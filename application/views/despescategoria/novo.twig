{% extends "base_layout.twig" %}
{% block title %}Nova Categoria de Despesa Geral{% endblock %}
{% block content_header %}
    <section class="content-header">
        <h1>
            √Årea Administrador
            <small>Nova Categoria de  Despesa Geral</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Criar Categoria Despesa Geral</li>
        </ol>
    </section>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h1 class="box-title">Dados de Categoria<br><small>*Campos obrigatorios</small></h1>
                </div>
                <form class="form-horizontal" role="form" action="{{base_url}}DespesaCategoria/adicionar" method="post" 
                      class="form-incline" onSubmit="return btnCadastrar();">
                    
                    <div id="box"></div>
                    <div class="box-body">
                    
                        <div class="form-group">
                        
                            <div class="col-xs-12 col-sm-12 col-md-12" id="divNome">
                                <label for="titulo">Titulo*</label>
                                <input type="text" class="form-control" id="titulo" 
                                   name="titulo" placeholder="Digite a categoria">
                            </div>                      
                        
                        </div>
                        
                    </div>    
                    
                    <div class="box-footer">
                        <button type="submit" class="btn btn-success">Cadastrar</button>
                        <a href="{{base_url}}DespesaCategoria/listar" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}