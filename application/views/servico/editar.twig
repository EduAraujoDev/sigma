{% extends "base_layout.twig" %}
{% block title %}Novo Serviço{% endblock %}

{% block content_header %}
    <section class="content-header">
        <h1>
            Área Administrador
            <small>Editar Serviço</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Editar Serviço</li>
        </ol>
    </section>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Dados do Serviço</h3>
                </div>
                <form role="form" action="{{base_url}}servico/atualizar/{{servico.id_servico}}" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="titulo">Titulo</label>
                            <input type="text" class="form-control" id="descricao" value="{{servico.titulo}}" name="titulo" placeholder="">
                        </div>                      
                        <div class="form-group">
                            <label for="descricao">Descrição</label>
                            <input type="text" class="form-control" id="descricao" value="{{servico.descricao}}" name="descricao" placeholder="">
                        </div>                      
                        <div class="form-group">
                            <label for="valor">Valor</label>
                            <input type="text" class="form-control" id="descricao" value="{{servico.valor}}" name="valor" placeholder="">
                        </div>     
                        <div class="form-group">
                            <label>Observações</label>
                            <textarea class="form-control" name="observacoes" rows="3" placeholder="">{{servico.observacoes}}</textarea>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}