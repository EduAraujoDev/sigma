{% extends "base_layout.twig" %}
{% block title %}Alterar Marca{% endblock %}

{% block content_header %}
    <section class="content-header">
        <h1>
            Área Administrador
            <small>Alterar Marca</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Alterar Marca</li>
        </ol>
    </section>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Dados do Marca</h3>
                </div>
                <form class="form-horizontal" role="form" action="{{base_url}}marca/atualizar/{{ marca.id_marca }}" 
                      method="post" method="post">
                    <div id="box"></div>
                    <div class="box-body">
                        
                        <div class="form-group">
                            <div class="col-xs-12 col-sm-12 col-md-5">
                                <label for="id">Código Marca</label>
                                <input type="text" class="form-control" id="id" name="id"
                                   value="{{ marca.id_marca }}" disabled>
                            </div>
                        </div>    
                        
                        <div id="box"></div>    
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <label for="descricao">Nome</label>
                                <input type="text" class="form-control" id="descricao" name="descricao" 
                                       placeholder="Digite a marca" value="{{ marca.titulo }}" disabled>
                            </div>                       
                        </div>    
                        
                    </div>
                    <div class="box-footer">
                        <a class="btn btn-primary btn-xs" href="{{base_url}}marca/editar/{{ marca.id_marca }}">Alterar</a>
                        <a class="btn btn-primary btn-xs" href="{{base_url}}marca/listar/{{ marca.id_marca }}">Listar</a>
                        <!--<button type="submit" class="btn btn-primary">Alterar</button>-->
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}